# Spotify API Credentials
# Get your credentials from https://developer.spotify.com/dashboard
REACT_APP_SPOTIFY_CLIENT_ID=your_client_id_here
REACT_APP_SPOTIFY_CLIENT_SECRET=your_client_secret_here

# OAuth Configuration (for Vercel serverless functions)
SPOTIFY_CLIENT_ID=your_client_id_here
SPOTIFY_CLIENT_SECRET=your_client_secret_here
REDIRECT_URI=http://localhost:3000/api/auth/callback
FRONTEND_URL=http://localhost:3000

# Feature flags
REACT_APP_FEATURE_JOURNEY_ENABLED=false

# Anthropic (Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
# Optional override (default: claude-3-5-sonnet-latest)
ANTHROPIC_MODEL=claude-3-5-sonnet-latest

# Basic AI rate limits (per-IP, per-minute)
AI_RL_PATHWAYS_PER_MIN=10
AI_RL_NARRATIVE_PER_MIN=20

# Vercel Postgres (for serverless functions)
# Locally: set POSTGRES_URL to your database connection string.
POSTGRES_URL=postgres://USER:PASSWORD@HOST:5432/DB?sslmode=require

# Vercel KV (optional but recommended for caching + rate limiting)
KV_REST_API_URL=
KV_REST_API_TOKEN=
KV_REST_API_READ_ONLY_TOKEN=
